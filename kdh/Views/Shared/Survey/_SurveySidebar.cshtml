
@{
    Layout = null;
}
<aside class="col-md-3 bg-light rounded-right">
    <div class="mb-3 mt-2">
        @if (User.Identity.IsAuthenticated) // If user are authorized...
        {
            // Only admin can see the sidebar
            if (User.IsInRole("admin"))
            {
                <h3 class="text-dark">Admin Menu</h3>
                <div class="my-3">@ViewBag.AdminEmail</div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Html.ActionLink("Frequently Asked Question", "Index", "FAQ")</li>
                    <li class="list-group-item">@Html.ActionLink("Donations", "Index", "Donation")</li>
                    <li class="list-group-item">@Html.ActionLink("News and Events", "News")</li>
                    <li class="list-group-item">@Html.ActionLink("Survey", "Index", "Surveys")</li>
                    <li class="list-group-item"><a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger col-md-10">Logout</a></li>
                </ul>
            }


        }
        // this is for public view (not authorized user)
        else
        {
            <h3 class="text-dark">Quick Links</h3>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@Html.ActionLink("Donations", "MakeDonation", "Donation")</li>
                <li class="list-group-item">@Html.ActionLink("Survey", "Create", "Surveys")</li>
                <li class="list-group-item"><a href="#">News and Events</a></li>
                <li class="list-group-item"><a href="#">Online Gift Shop</a></li>
                <li class="list-group-item"><a href="#">Health Blog</a></li>
                <li class="list-group-item"><a href="#">ER Wait Times</a></li>
            </ul>
        }
    </div>
</aside>
