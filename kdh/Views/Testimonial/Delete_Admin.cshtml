@model kdh.Models.Testimonial

@{
    ViewBag.Title = "Delete_Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Testimonial</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <div class="font-weight-bold lead">@Html.DisplayNameFor(model => model.Subject): @Html.DisplayFor(model => model.Subject)</div>
    <div>@Html.DisplayNameFor(model => model.Rate): @Html.DisplayFor(model => model.Rate)/5</div>
    <div>@Html.DisplayFor(model => model.Content)</div>
    <div>
        @Html.DisplayNameFor(model => model.DepartmentId): @Html.DisplayFor(model => model.department.department_name)
    </div>
    <div class="text-right">@Html.DisplayFor(model => model.Name) - @Html.DisplayFor(model => model.Role)</div>
    <div class="text-right">@Html.DisplayFor(model => model.Timestamp)</div>
    <div>@Html.DisplayNameFor(model => model.Reviewed): @Html.DisplayFor(model => model.Reviewed)</div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Id)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index_Admin")
        </div>
    }
</div>
