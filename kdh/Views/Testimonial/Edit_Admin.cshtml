@model kdh.Models.Testimonial
@{
    ViewBag.Title = "Edit_Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Review testimonial</h2>
<p>Please check for negative/false contents with swear/bad words.</p>

@using (Html.BeginForm("Edit_Admin", "Testimonial"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Testimonial</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="row my-2">
            <span class="col-md-3 text-md-right">Posted by</span> 
            <span class="ml-3">@Html.DisplayFor(model => model.Name)</span>
        </div>
        <div class="row my-2">
            <span class="col-md-3 text-md-right">Is</span> 
            <span class="ml-3">@Html.DisplayFor(model => model.Role)</span>
        </div>
        
        <div class="form-group row">
            <div class="col-md-3 text-md-right">
                <span class="text-danger">*</span>
                @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your testimonial subject..." } })
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-3 text-md-right">
                <span class="text-danger">*</span>
                @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.Content, 4, 20, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row my-2">
            <span class="col-md-3 text-md-right">@Html.DisplayNameFor(model => model.DepartmentId)</span>
            <span class="ml-3">@Html.DisplayFor(model => model.department.department_name)</span>
        </div>

        <div class="row my-2">
            <span class="col-md-3 text-md-right">@Html.DisplayNameFor(model => model.Rate)</span> 
            <span class="ml-3">@Html.DisplayFor(model => model.Rate)/5</span>
        </div>

        <div class="row my-2">
            <span class="col-md-3 text-md-right">@Html.DisplayNameFor(model => model.Timestamp)</span>
            <span class="ml-3">@Html.DisplayFor(model => model.Timestamp)</span>
        </div>

        <div class="row my-2">
            <span class="col-md-3 text-md-right">@Html.DisplayNameFor(model => model.Reviewed)</span>
            <span class="ml-3">@Html.DisplayFor(model => model.Reviewed)</span>
        </div>

        <div class="form-group">
            <div class="text-center">
                <input type="submit" value="Post" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Delete", "Delete_Admin") | 
    @Html.ActionLink("Back to List", "Index")
</div>