@model IEnumerable<kdh.Models.LabReport>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/PatientPortal/_PatientPortal.cshtml";
}

<h2 class="h4 mb-5">@ViewBag.PatientName -Lab Reports</h2>


<div class="mb-3">
    @Html.ActionLink("Create New Report", "Create", new { id = ViewBag.PatientId}, new { @class = "btn btn-primary" })
</div>


@foreach (var item in Model)
{
    <div class="container border border-secondary rounded p-3 mb-4">
        <div class="row mb-3">
            <div class="col-md-6">
                Report Issued:
                @item.IssueDate.Value.ToString("MMMM dd, yyyy")
            </div>
            <div class="col-md-6">
                Collected: @item.CollectionDate.ToString("MMMM dd, yyyy")
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                Ordered by: @item.OrderedBy
            </div>
            <div class="col-md-6">
                <span class="badge @(item.Status == "Complete" ? "badge-info" : "badge-secondary")">@item.Status</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-primary col-md-12 mb-3" })
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-primary col-md-12 mb-3" })
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-danger col-md-12" })
            </div>
        </div>

    </div>


}