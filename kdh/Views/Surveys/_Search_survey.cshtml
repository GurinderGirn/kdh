@model IEnumerable<kdh.Models.Survey>

@if (Model.Count() <= 0)
{
    <p>No message found. Please try again</p>
}
else
{
    @foreach (var item in Model)
    {
        <div class="card-body col-md-12">
            <div class="row">
                <div class="card-text col-md-4">
                    <span class="font-weight-bold">@Html.DisplayFor(modelItem => item.UserName)</span>
                </div>
                <div class="card-text col-md-4">
                    <span class="font-weight-bold">@Html.DisplayFor(modelItem => item.DateOfSurvey)</span>
                </div>
                <div class="card-text col-md-4 text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })
                </div>
            </div>
        </div>
            <hr />

    }
}
