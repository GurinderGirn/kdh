@model kdh.Models.Result

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/PatientPortal/_PatientPortal.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this result?</h3>
<div>

    <div class="row border d-none d-lg-flex">
        <div class="col-lg-3 border bg-secondary text-white font-weight-bold text-center">Category</div>
        <div class="col-lg-3 border bg-secondary text-white font-weight-bold text-center">Tested Item</div>
        <div class="col-lg-2 border bg-secondary text-white font-weight-bold text-center">Ref. Range</div>
        <div class="col-lg-2 border bg-secondary text-white font-weight-bold text-center">Result</div>
        <div class="col-lg-2 border bg-secondary text-white font-weight-bold text-center">Flag</div>
    </div>
    <div class="mb-4">
        <div class="row border">
            <div class="col-lg-3 border"><span class="d-lg-none font-weight-bold">Category: </span>@Model.TestType.Category</div>
            <div class="col-lg-3 border"><span class="d-lg-none font-weight-bold">Tested Item: </span>@Model.TestType.TestItem</div>
            <div class="col-lg-2 border"><span class="d-lg-none font-weight-bold">Ref. Range: </span>@Model.TestType.MinReference - @Model.TestType.MaxReference@Model.TestType.Unit</div>
            <div class="col-lg-2 border"><span class="d-lg-none font-weight-bold">Result: </span>@Model.Result1</div>
            <div class="col-lg-2 border"><span class="d-lg-none font-weight-bold">Flag: </span>@Model.Flag</div>
        </div>
        <div class="row">
            <div class="col-lg-12 border-right border-left border-bottom"><span class="font-weight-bold">Note: </span>@Model.Note</div>
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
        </div>
        <div>
            @Html.ActionLink("Back to Report", "Details", "LabReport", new { Id = Model.ReportId }, null)
        </div>
    }
</div>
