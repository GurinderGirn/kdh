@model kdh.Models.Applicant
@using CaptchaMvc.HtmlHelpers
 
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Apply to job position</h2>
<p>Only qualified candidates will be contacted for an interview. Humber District Hospitals are equal opportunity employers. We welcome and encourage applications from people with disabilities. Accommodations are available on request for candidates taking part in all aspects of the selection process.</p>
<p class="font-weight-bold">Resumes will only be accepted via email to: resumes@kdhospital.com</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            <div class="col-form-label col-sm-3 text-right">
                <span class="text-danger">*</span>
                @Html.LabelFor(model => model.FirstName)
            </div>
            <div class="col-sm-7">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-form-label col-sm-3 text-right">
                <span class="text-danger">*</span>
                @Html.LabelFor(model => model.LastName)
            </div>
            <div class="col-sm-7">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-form-label col-sm-3 text-right">
                <span class="text-danger">*</span>
                @Html.LabelFor(model => model.DateOfBirth)
            </div>
            <div class="col-sm-7">
                @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-form-label col-sm-3 text-right">
                <span class="text-danger">*</span>
                @Html.LabelFor(model => model.Email)
            </div>
            <div class="col-sm-7">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-form-label col-sm-3 text-right">
                <span class="text-danger">*</span>
                @Html.LabelFor(model => model.Phone)
            </div>
            <div class="col-sm-7">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-form-label col-sm-3 text-right">
                <span class="text-danger">*</span>
                @Html.LabelFor(model => model.JobId)
            </div>
            <div class="col-sm-7">
                @Html.DropDownListFor(model => model.JobId, new SelectList(ViewBag.jobs, "JobId", "JobTitle"), " - Select a job position - ", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.JobId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="text-center">
                @Html.Captcha("Refresh", "Enter the text you see above:", 7, "Captcha is required.", true)
        </div>
        <div class="form-group">
            <div class="text-center">
                <input type="submit" value="Apply!" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="text-center">
    @Html.ActionLink("Back to List", "Index", "Job")
</div>
